{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "opus",
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "WebSearch",
      "WebFetch",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git switch:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(py:*)",
      "Bash(python:*)",
      "Bash(dotnet:*)",
      "Bash(powershell.exe * az devops configure --list:*)",
      "Bash(powershell.exe * az devops project list:*)",
      "Bash(powershell.exe * az devops project show:*)",
      "Bash(powershell.exe * az repos list:*)",
      "Bash(powershell.exe * az repos show:*)",
      "Bash(powershell.exe * az repos ref list:*)",
      "Bash(powershell.exe * az repos pr list:*)",
      "Bash(powershell.exe * az repos pr show:*)",
      "Bash(powershell.exe * az repos pr reviewer list:*)",
      "Bash(powershell.exe * az repos pr thread list:*)",
      "Bash(powershell.exe * az repos pr work-item list:*)",
      "Bash(powershell.exe * az repos policy list:*)",
      "Bash(powershell.exe * az pipelines list:*)",
      "Bash(powershell.exe * az pipelines show:*)",
      "Bash(powershell.exe * az pipelines runs list:*)",
      "Bash(powershell.exe * az pipelines runs show:*)",
      "Bash(powershell.exe * az pipelines build list:*)",
      "Bash(powershell.exe * az pipelines build show:*)",
      "Bash(powershell.exe * az pipelines variable list:*)",
      "Bash(powershell.exe * az pipelines variable-group list:*)",
      "Bash(powershell.exe * az pipelines variable-group show:*)",
      "Bash(powershell.exe * az boards work-item show:*)",
      "Bash(powershell.exe * az boards work-item query:*)",
      "Bash(powershell.exe * az boards query list:*)",
      "Bash(powershell.exe * az boards query show:*)",
      "Bash(powershell.exe * az boards area project list:*)",
      "Bash(powershell.exe * az boards iteration project list:*)",
      "Bash(powershell.exe * az artifacts feed list:*)",
      "Bash(powershell.exe * az artifacts feed show:*)",
      "Bash(powershell.exe * az devops wiki list:*)",
      "Bash(powershell.exe * az devops wiki show:*)",
      "Bash(powershell.exe * az devops wiki page show:*)",
      "Bash(powershell.exe * az devops service-endpoint list:*)",
      "Bash(powershell.exe * az devops service-endpoint show:*)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -ExecutionPolicy Bypass -File \"{{CLAUDE_DIR}}\\claude-notification.ps1\" -Title \"Claude Code\" -Message \"Your Action Needed\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -ExecutionPolicy Bypass -File \"{{CLAUDE_DIR}}\\dangerous-command-guard.ps1\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "powershell.exe -ExecutionPolicy Bypass -File \"{{CLAUDE_DIR}}\\statusline.ps1\""
  },
  "language": "Japanese",
  "alwaysThinkingEnabled": true
}
